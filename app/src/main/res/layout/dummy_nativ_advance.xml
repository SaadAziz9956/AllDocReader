<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_margin="5dp"
        android:background="@drawable/dummy_backgorund"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ad"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:background="@drawable/dummy_round_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ad"
                android:textColor="#6ca7ff"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dummy"
            android:layout_width="250dp"
            android:layout_height="13dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/dummy_rectangle_btn"
            app:layout_constraintTop_toTopOf="@id/ad"
            app:layout_constraintStart_toEndOf="@id/ad"
            app:layout_constraintBottom_toTopOf="@id/dumy"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dumy"
            android:layout_width="180dp"
            android:layout_height="13dp"
            android:background="@drawable/dummy_rectangle_btn"
            app:layout_constraintTop_toBottomOf="@id/dummy"
            app:layout_constraintBottom_toBottomOf="@id/ad"
            app:layout_constraintStart_toStartOf="@id/dummy"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>